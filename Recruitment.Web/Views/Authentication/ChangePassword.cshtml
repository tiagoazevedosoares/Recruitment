@model Recruitment.Web.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = Strings.ChangePassword;
}
<div class="col-lg-4"></div>

<div class="col-lg-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title">
                @Strings.ChangePassword
            </div>
        </div>
        <div class="panel-body">
            @Html.ValidationSummary(true)
            @using (Html.BeginForm("ChangePassword", "Authentication", FormMethod.Post, new { @role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.OldPassword, HtmlHelpers.GetHtmlAttributes(@class: "form-control", placeholder: Strings.OldPassword))
                    </div>
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.NewPassword, HtmlHelpers.GetHtmlAttributes(@class: "form-control", placeholder: Strings.NewPassword))
                    </div>
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.NewPasswordConfirmation, HtmlHelpers.GetHtmlAttributes(@class: "form-control", placeholder: Strings.RepeatNewPassword))
                    </div>
                    @Html.ValidationMessageFor(m => m.NewPasswordConfirmation)
                </div>
                <input type="submit" value="@Strings.ChangePassword" class="btn btn-primary btn-block" />
            }
        </div>
    </div>
</div>
<div class="col-lg-4"></div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}